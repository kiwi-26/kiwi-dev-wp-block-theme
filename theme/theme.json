{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "layout": {
			"contentSize": "960px",
			"wideSize": "1200px"
		},
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", sans-serif, \"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\", \"Noto Color Emoji\"",
                    "name": "System Font",
                    "slug": "system-font"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem"
                },
                {
                    "slug": "medium",
                    "size": "1rem"
                },
                {
                    "slug": "large",
                    "size": "1.125rem"
                },
                {
                    "slug": "x-large",
                    "size": "1.3125rem"
                }
            ]
        },
        "color": {
			"palette": [
				{
					"color": "#279ac4",
					"slug": "primary",
                    "name": "Primary"
				},
				{
					"color": "#1d7291",
					"slug": "primary-dark",
                    "name": "PrimaryDark"
				},
				{
					"color": "#2e353f",
					"slug": "body",
                    "name": "Body"
				},
				{
					"color": "#fafaf9",
					"slug": "background",
                    "name": "Background"
				}
			]
		}
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system-font)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.5"
        },
        "spacing": {
            "blockGap": "1.5rem",
            "padding": {
                "top": "1rem",
                "right": "1rem",
                "bottom": "1rem",
                "left": "1rem"
            }
        },
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--body)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    },
                    "typography": {
						"textDecoration": "underline"
					}
                },
                "typography": {
                    "textDecoration": "none"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "サイトヘッダー",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "サイトフッター",
            "area": "footer"
        }
    ]
}
